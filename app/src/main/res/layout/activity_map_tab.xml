<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/back"
    tools:context=".mapTab">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importante: los celulares sin los servicios de Google play no podran usar esta funcion"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/Pink"
            android:padding="10sp"
            android:textSize="29sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asegurate de habilitar estos servicios antes de proceder"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="@color/Pink"
            android:padding="10sp"
            android:textSize="29sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localizar este dispositivo"
            android:id="@+id/showMap"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity = "start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>